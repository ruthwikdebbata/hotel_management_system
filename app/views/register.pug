doctype html
html
  head
    title Register â€“ Hotel Management System
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/darkly/bootstrap.min.css"
    )
  body
    include _navbar.pug

    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow
            .card-header.text-center.bg-primary.text-white
              h3.mb-0 Register
            .card-body
              if error
                .alert.alert-danger= error
              form(action='/set-password' method='POST')
                .mb-3
                  label.form-label(for='name') Name
                  input#name.form-control(
                    type='text'
                    name='name'
                    placeholder='Your full name'
                    required
                  )
                .mb-3
                  label.form-label(for='phone') Phone Number
                  input#phone.form-control(
                    type='text'
                    name='phone'
                    placeholder='Your phone number'
                    required
                  )
                .mb-3
                  label.form-label(for='email') Email address
                  input#email.form-control(
                    type='email'
                    name='email'
                    placeholder='Enter email'
                    required
                  )
                .mb-3
                  label.form-label(for='password') Password
                  input#password.form-control(
                    type='password'
                    name='password'
                    placeholder='Password'
                    required
                  )
                .mb-3
                  label.form-label(for='contactNumber') Alternate Contact Number
                  input#contactNumber.form-control(
                    type='text'
                    name='contactNumber'
                    placeholder='Optional alternate contact number'
                  )
                .mb-3
                  label.form-label(for='address') Address
                  input#address.form-control(
                    type='text'
                    name='address'
                    placeholder='Your address'
                  )
                button.btn.btn-primary.w-100(type='submit') Register
            .card-footer.text-center
              p.mb-0
                | Already have an account? 
                a(href='/login') Login here

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
