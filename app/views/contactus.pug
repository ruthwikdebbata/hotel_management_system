doctype html
html
  head
    title Contact Us - Hotel Management System
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')

  body
    include _navbar.pug

    .container.mt-5
      h2.text-center Contact Us

      .row
        .col-md-8.offset-md-2
          form(action='/contact' method='POST')
            .mb-3
              label(for='name') Name
              input.form-control(type='text', id='name', name='name', required=true, placeholder='Your Name')

            .mb-3
              label(for='email') Email
              input.form-control(type='email', id='email', name='email', required=true, placeholder='Your Email')

            .mb-3
              label(for='message') Message
              textarea.form-control(id='message', name='message', rows='4', required=true, placeholder='Your Message')

            .text-center.mt-4
              button.btn.btn-primary(type='submit') Submit

      .mt-4.text-center
        p.text-muted Thank you for reaching out! We'll get back to you soon.

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
