doctype html
html
  head
    title Login – Hotel Management System
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    )
  body
    include _navbar.pug

    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow
            .card-header.text-center.bg-primary.text-white
              h3.mb-0 Login
            .card-body
              if error
                .alert.alert-danger= error
              form(action='/authenticate' method='POST')
                .mb-3
                  label.form-label(for='email') Email address
                  input#email.form-control(
                    type='email'
                    name='email'
                    placeholder='Enter email'
                    required
                  )
                .mb-3
                  label.form-label(for='password') Password
                  input#password.form-control(
                    type='password'
                    name='password'
                    placeholder='Password'
                    required
                  )
                .form-check.mb-3
                  input#remember.form-check-input(type='checkbox', name='remember')
                  label.form-check-label(for='remember') Remember me
                button.btn.btn-primary.w-100(type='submit') Login
            .card-footer.text-center
              p.mb-0
                | Don’t have an account? 
                a(href='/register') Register here

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
