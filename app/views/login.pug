doctype html
html
  head
    title Login – Hotel Management System
    //- Swapped Bootstrap for Bootswatch Darkly theme
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/darkly/bootstrap.min.css")
  body.bg-dark.text-light
    include _navbar.pug

    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow-lg.border-secondary
            .card-header.text-center.bg-secondary.text-white
              h3.mb-0 Login
            .card-body.bg-dark.text-light
              if error
                .alert.alert-danger= error
              form(action='/authenticate' method='POST')
                .mb-3
                  label.form-label.text-light(for='email') Email address
                  input#email.form-control(
                    type='email'
                    name='email'
                    placeholder='Enter email'
                    required
                  )
                .mb-3
                  label.form-label.text-light(for='password') Password
                  input#password.form-control(
                    type='password'
                    name='password'
                    placeholder='Password'
                    required
                  )
                .form-check.mb-3
                  input#remember.form-check-input(type='checkbox', name='remember')
                  label.form-check-label.text-light(for='remember') Remember me
                button.btn.btn-secondary.w-100(type='submit') Login
            .card-footer.text-center.bg-secondary.text-white
              p.mb-0
                | Don’t have an account? 
                a.text-warning(href='/register') Register here

    //- Optional: Bootswatch JS bundle for interactive components
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
