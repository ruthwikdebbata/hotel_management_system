doctype html
html
  head
    title Hotel Rooms - Hotel Management System
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    style.
      /* Custom styles to ensure images and cards have the same size */
      .card-img-top {
        height: 200px; /* Set a fixed height for images */
        object-fit: cover; /* Ensures the image covers the container without distortion */
      }
      .card-body {
        min-height: 200px; /* Ensure that the card content has the same height as the image */
      }

  body
    include _navbar.pug

    .container.mt-5
      h2.text-center Rooms
      .row
        each room in rooms
          .col-md-4
            .card.mb-4
              img.card-img-top(src=room.image_url || 'default_room_image.jpg', alt=room.type)
              .card-body
                h5.card-title= room.type
                p.card-text= room.description
                p.card-text
                  strong Price: 
                  span â‚¹ #{room.price}
                p.card-text
                  strong Status: 
                  span= room.status
                a.btn.btn-primary(href=`/rooms/${room.room_id}`) View Room Details
          
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
