doctype html
html
  head
    title Hotel Management System
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    style.
      .card {
        height: 100%; /* Ensure all cards have the same height */
      }
      .card-img-top {
        height: 200px; /* Adjust as needed */
        object-fit: cover; /* Ensures images fill the space properly */
      }
      .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

  body
    include _navbar.pug

    .container.mt-5
      .row.text-center
        .col-md-12
          h1 Welcome to Our Hotel
          p.lead Experience luxury and comfort with our world-class hospitality.

      .row.mt-4
        .col-md-4
          .card.h-100
            img.card-img-top(src='1.jpg', alt='Rooms')
            .card-body
              h5.card-title Luxurious Rooms
              p.card-text Enjoy your stay with our premium rooms and amenities.
              a.btn.btn-primary.mt-auto(href='/rooms') View Rooms
        
        .col-md-4
          .card.h-100
            img.card-img-top(src='fine_dining.webp', alt='Dining')
            .card-body
              h5.card-title Fine Dining
              p.card-text Savor delicious meals from our top chefs.
              a.btn.btn-primary.mt-auto(href='/dining') Explore Dining

        .col-md-4
          .card.h-100
            img.card-img-top(src='book.webp', alt='Book Now')
            .card-body
              h5.card-title Book Your Stay
              p.card-text Reserve your room online with ease.
              a.btn.btn-success.mt-auto(href='/reservations') Book Now

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
